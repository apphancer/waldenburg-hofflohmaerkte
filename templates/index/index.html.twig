{% extends 'base.html.twig' %}

{% block title %}Waldenburg Hofflohmärkte 2024{% endblock %}

{% block body %}
<div class="min-h-screen flex flex-col">
    <section class="bg-white dark:bg-gray-900">
        <div class="py-8 px-4 mx-auto max-w-screen-xl text-center lg:py-16 lg:px-12">
            <h1 class="mb-4 text-4xl font-extrabold tracking-tight leading-none text-gray-900 md:text-5xl lg:text-6xl dark:text-white">
                Waldenburger Hofflohmärkte 2024</h1>
            <p class="text-gray-500 sm:text-xl dark:text-gray-400">Am 31. Oktober von 10 Uhr bis 17 Uhr</p>
            <p class="mb-8 text-lg font-normal text-gray-500 lg:text-xl sm:px-16 xl:px-48 dark:text-gray-400">Die Stadt entdecken 🏡, Nachbarn kennenlernen 🤝, Trödeln 🛍️. Jede*r kann mitmachen!</p>
            <div class="flex flex-col mb-8 lg:mb-16 space-y-4 sm:flex-row sm:justify-center sm:space-y-0 sm:space-x-4">
                <a href="https://forms.gle/dqoQScw1dUTXmkRS7"
                   class="inline-flex justify-center items-center py-3 px-5 text-base font-medium text-center text-white rounded-lg bg-primary-700 hover:bg-primary-800 focus:ring-4 focus:ring-primary-300 dark:focus:ring-primary-900"
                   target="_blank">
                    Melde deinen Stand an
                    <svg class="ml-2 -mr-1 w-5 h-5" fill="currentColor" viewBox="0 0 20 20"
                         xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd"
                              d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z"
                              clip-rule="evenodd"></path>
                    </svg>
                </a>
            </div>
        </div>
    </section>

    <button id="toggle-button" class="btn-show-sidebar">Show Sidebar</button>

    <section {{ stimulus_controller('map') }} id="map-container" class="flex-grow flex">
        <div class="sidebar" id="sidebar">
            <div class="heading">
                <h2 class="mb-1 text-xl font-bold leading-tight tracking-tight text-gray-900 md:text-2xl dark:text-white">Stände auf den Hofflohmärkten</h2>
            </div>
            <div id="listings" class="listings"></div>
        </div>
        <div id="map" class="map flex-grow"></div>
    </section>
</div>
{% endblock %}
